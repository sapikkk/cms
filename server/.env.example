# ================================
# SERVER CONFIGURATION
# ================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ================================
# DATABASE (PostgreSQL)
# For Vercel/Serverless, use connection pooling
# ================================
# Use pooler connection for DATABASE_URL (for queries)
DATABASE_URL="postgresql://username:password@localhost:5432/coffeeshop_cms?schema=public"
# Use direct connection for migrations (no pooling)
DIRECT_URL="postgresql://username:password@localhost:5432/coffeeshop_cms?schema=public"

# ================================
# JWT AUTHENTICATION
# Generate secrets with: openssl rand -hex 32
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_REFRESH_EXPIRES_IN=30d

# ================================
# SECURITY
# ================================
BCRYPT_SALT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# CORS
# Update for Vercel: https://penditegar.vercel.app
# ================================
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# ================================
# FILE UPLOAD
# ================================
# Options: local | s3 | minio | firebase
STORAGE_TYPE=local
MAX_FILE_SIZE=5242880

# AWS S3 (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# MinIO (if using MinIO)
MINIO_ENDPOINT=
MINIO_PORT=
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=

# ================================
# LOGGING
# ================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ================================
# EMAIL (for future notifications)
# ================================
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# ================================
# MASTER ADMIN (Initial Setup)
# ================================
MASTER_ADMIN_EMAIL=master@coffeeshop.com
MASTER_ADMIN_PASSWORD=MasterAdmin@2025
MASTER_ADMIN_USERNAME=masteradmin
