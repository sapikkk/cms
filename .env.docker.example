# =========================================
# CoffeeShop CMS - Docker Environment
# Copy this to .env and fill in real values
# =========================================

# ==========================================
# DATABASE
# ==========================================
DB_USER=coffeeshop
DB_PASSWORD=your_secure_database_password_here
DB_NAME=coffeeshop_cms

# ==========================================
# JWT SECRETS (Must be at least 32 characters)
# Generate with: openssl rand -base64 64
# ==========================================
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_at_least_32_chars
JWT_REFRESH_EXPIRES_IN=30d

# ==========================================
# APP CONFIGURATION
# ==========================================
CORS_ORIGIN=https://yourdomain.com

# ==========================================
# MASTER ADMIN (First run only)
# ==========================================
MASTER_ADMIN_EMAIL=admin@yourdomain.com
MASTER_ADMIN_PASSWORD=YourSecurePassword@123
MASTER_ADMIN_USERNAME=masteradmin
